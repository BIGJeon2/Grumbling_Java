<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grumbling">

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.bigjeon.grumbling.Post_Write_Activity"></activity>
        <activity android:name="com.bigjeon.grumbling.P2P_Chatting_Activity" />
        <activity android:name="com.bigjeon.grumbling.Notification_Activity" />
        <activity android:name="com.bigjeon.grumbling.Setting_My_Profile_Activity" />
        <activity
            android:name="com.bigjeon.grumbling.Chatting_Activity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.bigjeon.grumbling.User_Profile_View_activity" />
        <activity android:name="com.bigjeon.grumbling.Show_Selected_Post_Activity" />
        <activity android:name="com.bigjeon.grumbling.Google_Login_Activity" />
        <activity android:name="com.bigjeon.grumbling.Set_User_Profile_Activity" />
        <activity android:name="com.bigjeon.grumbling.App_Main_Activity" />
        <activity android:name="com.bigjeon.grumbling.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>