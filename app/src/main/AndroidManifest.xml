<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grumbling">

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="com.google.firebase.messaging.default_notification_channel_id"
        android:value="@string/default_notification_channel_id"/>

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:icon="@mipmap/main_release_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/main_release_icon_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Grumbling">
        <activity android:name="com.bigjeon.grumbling.Post_Write_Activity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.bigjeon.grumbling.P2P_Chatting_Activity">
            <intent-filter>
                <action android:name=".P2P"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.bigjeon.grumbling.Setting_My_Profile_Activity" />
        <activity
            android:name="com.bigjeon.grumbling.Chatting_Activity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name=".Chatting"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.bigjeon.grumbling.User_Profile_View_activity">
            <intent-filter>
                <action android:name=".Friend"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.bigjeon.grumbling.Show_Selected_Post_Activity">
            <intent-filter>
                <action android:name=".Post"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.bigjeon.grumbling.Google_Login_Activity" />
        <activity android:name="com.bigjeon.grumbling.Set_User_Profile_Activity" />
        <activity android:name="com.bigjeon.grumbling.App_Main_Activity">
        </activity>
        <activity android:name="com.bigjeon.grumbling.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name=".Main"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <service
            android:name="com.bigjeon.grumbling.service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.bigjeon.grumbling.service.MyService"
            android:exported="false"
            android:enabled="true"
            android:stopWithTask="false">
        </service>

        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>
    </application>

</manifest>