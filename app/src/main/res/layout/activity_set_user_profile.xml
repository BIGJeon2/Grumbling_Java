<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class = "Profile_Binding">
        <variable
            name="User_Profile_Set_Activity"
            type="com.bigjeon.grumbling.Set_User_Profile_Activity"/>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    tools:context="com.bigjeon.grumbling.Set_User_Profile_Activity">
    <RelativeLayout
        android:id="@+id/App_Title_Container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="-프로필 설정-"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:background="@drawable/app_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/Complete_Btn"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="완료"></Button>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/App_Title_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/User_Img"
                android:layout_marginTop="100dp"
                android:layout_centerInParent="true"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/Transparent_Black70"
                android:src="@drawable/user_profile_default_img"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/User_Img"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/Set_User_Img_Default_Btn"
                    android:text="기본 프로필"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </Button>
                <Button
                    android:id="@+id/Set_User_Img_from_Gallery_Btn"
                    android:text="갤러리"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </Button>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="이름 : "
                android:layout_toLeftOf="@+id/User_Name"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_alignBaseline="@id/User_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/User_Name"
                android:hint="사용하실 이름을 입력하세요."
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </EditText>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</layout>