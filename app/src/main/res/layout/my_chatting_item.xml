<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/Chatting_Text_Container"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/Chatting_Text_TV"
        android:padding="10dp"
        android:gravity="center"
        android:text="내용입력창입니다."
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    </RelativeLayout>
    <TextView
        android:text="입력시간"
        android:id="@+id/Chatting_WriteDate_TV"
        android:layout_toLeftOf="@+id/Chatting_Text_Container"
        android:layout_alignBottom="@id/Chatting_Text_Container"
        android:textSize="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</RelativeLayout>