<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View">
        </import>
        <variable
            name="select_post_view"
            type="com.bigjeon.grumbling.Show_Selected_Post_Activity" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/none_effect_background_img"
    tools:context="com.bigjeon.grumbling.Show_Selected_Post_Activity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Selected_Post_Toolbar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/Selected_Post_Title_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/Selected_Post_User_Img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/Transparent_light_Green"
                app:civ_border_width="1dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/Selected_Post_User_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/Selected_Post_User_Img"
                android:text="User_Name"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/Linearlayout"
        android:layout_below="@id/Selected_Post_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Selected_Post_Toolbar">
        <RelativeLayout
            android:id="@+id/Selected_Post_Content_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Transparent_Black90">
            <FrameLayout
                android:id="@+id/Show_Selected_Post_FrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/Selected_Post_Bottom_Container"
                android:backgroundTint="@android:color/transparent">
                <ImageView
                    android:id="@+id/Selected_Post_Background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter">
                </ImageView>
            </FrameLayout>

            <TextView
                android:id="@+id/Selected_Post_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#50000000"
                android:text="나는 가끔 눈물을 흘린다.">
            </TextView>

            <RelativeLayout
                android:id="@+id/Selected_Post_Bottom_Container"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/none_effect_background_img">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Selected_Post_Enter_Chatting_CIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_baseline_question_answer_24">
                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Selected_Post_Favorite_Circle_CIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/Selected_Post_Favorite_Count_TV"
                    android:backgroundTint="@color/Transparent_Black90"
                    android:background="@drawable/ic_baseline_favorite_border_24"></de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/Selected_Post_Favorite_Count_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Transparent_Black90"
                    android:layout_toLeftOf="@+id/Selected_Post_Enter_Chatting_CIV"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="3dp"
                    android:text="000"
                    android:textStyle="bold"
                    android:textSize="10dp">
                </TextView>
                <TextView
                    android:id="@+id/Show_Selected_Post_Whrite_Date_Tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="write_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/Show_Selected_Post_Chat_Container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="5dp"
        android:layout_below="@id/Linearlayout"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/none_effect_background_img">
        <TextView
            android:id="@+id/Show_Selected_Post_None_Chat_TV"
            android:visibility="visible"
            android:textSize="15dp"
            android:textColor="@color/Transparent_Black30"
            android:textStyle="bold"
            android:text="현재 등록된 채팅이 없습니다.\n 자유롭게 채팅에 참여해보세요!"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Chat_List_Rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/white"
            tools:listitem="@layout/other_chatting_item">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
</layout>