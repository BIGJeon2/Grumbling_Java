<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View">
        </import>
        <variable
            name="My_Friends_List_binding"
            type="com.bigjeon.grumbling.fragments.Friend_List_Fragment" />
    </data>
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/white"
        tools:context="com.bigjeon.grumbling.fragments.Friend_List_Fragment">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/Friend_List_My_Profile_Container"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Friend_List_My_Img_Civ"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_color="@color/Transparent_Green"
                app:civ_border_width="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/Friend_List_My_Name_TV"
                android:layout_toRightOf="@id/Friend_List_My_Img_Civ"
                android:textSize="15dp"
                android:text="내이름"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/Friend_List_My_Profile_Container"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <FrameLayout
                   android:id="@+id/Friend_Activity_FrameLayout_Container"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Friend_List_Rcv"
                tools:listitem="@layout/user_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
               </FrameLayout>
           </RelativeLayout>
       </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>