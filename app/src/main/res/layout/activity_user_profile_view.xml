<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View">
        </import>
        <variable
            name="Show_User_Profile_Binding"
            type="com.bigjeon.grumbling.User_Profile_View_activity" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_Color"
    tools:context="com.bigjeon.grumbling.User_Profile_View_activity">
    <LinearLayout
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/User_Profile_Back_IMV"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/Theme_Text_Color"
                android:background="@drawable/ic_baseline_navigate_before_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:id="@+id/Setting_Fragment_My_Name_Tv"
                android:text="Big_Jeon"
                android:padding="2dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_medium"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/User_Profile_Back_IMV"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Setting_Fragment_Send_Friend_Request_Btn"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="6dp"
                android:padding="4dp"
                android:backgroundTint="@color/None_Friend_State_Color"
                android:background="@drawable/ic_baseline_group_add_24">
            </de.hdodenhof.circleimageview.CircleImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Setting_Fragment_Chatting_Civ"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="4dp"
                android:layout_toLeftOf="@id/Setting_Fragment_Send_Friend_Request_Btn"
               android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_baseline_question_answer_24"
                android:backgroundTint="@color/Theme_Text_Color">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/P2P_Chat_TV"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Setting_Fragment_Chatting_Civ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1 채팅"
                android:textSize="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="7.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Setting_Fragment_My_Profile_Img_Civ"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/default_profile_img"
                    app:civ_border_color="@color/Theme_Text_Color"
                    app:civ_border_width="0.5dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/User_Profile_activity_User_Location_TV"
                    android:text="#123 - 123"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Theme_Less_Accent_Color"
                    android:layout_above="@id/User_Profile_Btns_Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/Setting_Fragment_My_Profile_Img_Civ"
                    android:padding="2dp"
                    android:textSize="14dp">
                </TextView>

                <TextView
                    android:id="@+id/User_Profile_Activity_State_Msg_Tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/User_Profile_activity_User_Location_TV"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/Setting_Fragment_My_Profile_Img_Civ"
                    android:fontFamily="@font/notosans_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="6dp"
                    android:text="상태 메세지"
                    android:textColor="@color/Theme_Less_Accent_Color"
                    android:textSize="16dp"></TextView>
                <LinearLayout
                    android:id="@+id/User_Profile_Btns_Container"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">
                    <LinearLayout
                        android:id="@+id/User_Profile_Avtivity_Post_Btn_Container"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/User_Profile_Post_Civ"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/Transparent_Black90"
                            android:background="@drawable/ic_baseline_article_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/User_Profile_Avtivity_Friend_Btn_Container"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/User_Profile_Friend_Civ"
                            android:gravity="center"
                            android:backgroundTint="@color/Transparent_Black50"
                            android:background="@drawable/ic_baseline_group_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <FrameLayout
                android:id="@+id/User_Profile_FrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/User_Profile_ViewPager2"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.viewpager2.widget.ViewPager2>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>