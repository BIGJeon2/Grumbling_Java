<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class=".App_Main_Binding">
        <variable
            name="App_Main_Activity"
            type="com.bigjeon.grumbling.App_Main_Activity" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_Color"
    tools:context="com.bigjeon.grumbling.App_Main_Activity">
    <RelativeLayout
        android:id="@+id/Title"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/TITLE"
            android:text="그렁"
            android:includeFontPadding="false"
            android:fontFamily="@font/binggrae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/Post_Create_Color">
        </TextView>
        <TextView
            android:text=" 소통에 자유를 더하다"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/TITLE"
            android:textColor="@color/Theme_Less_Accent_Color"
            android:fontFamily="@font/binggrae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/App_Main_Write_Post_CIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            android:backgroundTint="@color/Theme_Text_Color"
            android:background="@drawable/ic_baseline_create_24">
        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adViewBanner_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Theme_Color"
        app:layout_constraintBottom_toBottomOf="@+id/App_Main_Fragment_FrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/App_Main_Fragment_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        tools:layout_editor_absoluteX="6dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/App_Main_ViewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"></androidx.viewpager2.widget.ViewPager2>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_edge_black_1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/Firend_List_Btn_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/App_Main_Friend_Civ"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_group_24"
                android:backgroundTint="@color/Btn_Off_Color"
                android:textSize="10dp"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Chatting_List_Btn_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/App_Main_Chatting_Civ"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_question_answer_24"
                android:backgroundTint="@color/Btn_Off_Color"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Post_List_Btn_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/App_Main_Post_Civ"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_article_24"
                android:backgroundTint="@color/Btn_On_Color"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Timeline_List_Btn_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/App_Main_Notice_Civ"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_notifications_24"
                android:backgroundTint="@color/Btn_Off_Color"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/My_Profile_List_Btn_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/App_Main_My_Img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/app_logo"
                app:civ_border_color="@color/Theme_Text_Color"
                app:civ_border_width="0.5dp"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>