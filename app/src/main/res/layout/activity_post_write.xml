<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View">
        </import>
        <variable
            name="post_write_activity_binding"
            type="com.bigjeon.grumbling.Post_Write_Activity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/Top_Bar"
            android:visibility="visible"
            android:background="@drawable/post_view_title_under_edge_1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Dialog_Posting_Complete_CIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_baseline_check_24"
                android:backgroundTint="@color/Transparent_Green">
            </de.hdodenhof.circleimageview.CircleImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Post_Write_BackPress_Imv"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/Theme_Text_Color"
                android:background="@drawable/ic_baseline_navigate_before_24"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/Dialog_Posting_User_Name"
                android:text="글 작성"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:textSize="18dp"
                android:textColor="@color/Theme_Text_Color"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Post_Write_BackPress_Imv">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Dialog_Posting_Content_Container"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_below="@+id/Top_Bar">
            <FrameLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/Dialog_Posting_Background"
                    android:background="@drawable/post_default_img"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageView>
            </FrameLayout>
            <EditText
                android:id="@+id/Dialog_Posting_Content"
                android:background="@color/Transparent_Black30"
                android:hint="텍스트"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/Theme_Less_Accent_Color"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/Theme_Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dialog_Posting_Content_Container">
            <LinearLayout
                android:id="@+id/Post_Write_Btns_Container"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/Post_Write_Text_Set_Container"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Dialog_Posting_Set_Text"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_baseline_text_format_24"
                    android:backgroundTint="@color/Theme_Text_Color">
                </de.hdodenhof.circleimageview.CircleImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Post_Write_Img_Set_Container"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Dialog_Posting_Set_Img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/Btn_Off_Color"
                    android:background="@drawable/ic_baseline_insert_photo_24">
                </de.hdodenhof.circleimageview.CircleImageView>
            </RelativeLayout>
            </LinearLayout>
        <FrameLayout
            android:id="@+id/Post_Write_FrameLayout"
            android:layout_below="@id/Post_Write_Btns_Container"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/Post_Write_ViewPager2"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.viewpager2.widget.ViewPager2>
            </RelativeLayout>
        </FrameLayout>
        </RelativeLayout>
        </RelativeLayout>
</layout>