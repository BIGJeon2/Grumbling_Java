<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class = "P2P_Chat_Binding">
        <variable
            name="P2P_Chat_Activity"
            type="com.bigjeon.grumbling.P2P_Chatting_Activity" />
    </data>
    <LinearLayout
        tools:context="com.bigjeon.grumbling.P2P_Chatting_Activity"
        android:orientation="vertical"
        android:background="@color/Theme_Color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/Post_View_Content_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/P2P_Chat_Room_Color"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/BackPress_Btn"
                android:backgroundTint="@color/Theme_Text_Color"
                android:background="@drawable/ic_baseline_navigate_before_24"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:id="@+id/Chatting_Post_Content_TV"
                android:text="User_Name"
                android:textSize="18dp"
                android:layout_toRightOf="@id/BackPress_Btn"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Theme_Text_Color"
                android:gravity="left"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_medium"
                android:layout_marginLeft="6dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="2"
            android:background="@color/P2P_Chat_Room_Color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Chatting_List_ListView"
                android:padding="6dp"
                android:descendantFocusability="blocksDescendants"
                android:background="@android:color/transparent"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:divider="@color/white"
                android:layout_above="@id/Replided_Edit_Container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/Replided_Edit_Container"
                android:visibility="gone"
                android:background="@color/Theme_Color"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <RelativeLayout
                    android:id="@+id/Replide_Target_Name_Container"
                    android:background="@drawable/post_view_title_under_edge_1dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingTop="2dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/Replied_Target_Name"
                        android:textSize="14dp"
                        android:hint="이름"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/Theme_Text_Color"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="6dp"
                    android:layout_below="@id/Replide_Target_Name_Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/Replied_Text"
                        android:fontFamily="@font/notosans_regular"
                        android:textSize="12dp"
                        android:includeFontPadding="false"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/Theme_Less_Accent_Color"
                        android:text="답장 대상 내용"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Chatting_Edittext_Container"
            android:background="@color/Chat_ET_Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Chatting_Send_CIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_baseline_send_24"
                    android:backgroundTint="@color/Theme_Text_Color"></de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                    android:id="@+id/Reply_Img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_baseline_reply_24"
                    android:backgroundTint="@color/Theme_Text_Color"
                    android:rotationX="180"
                    android:rotationY="180"
                    android:visibility="gone"></ImageView>

                <EditText
                    android:id="@+id/Chatting_ETV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/Chatting_Send_CIV"
                    android:layout_toRightOf="@id/Reply_Img"
                    android:background="@null"
                    android:fontFamily="@font/notosans_regular"
                    android:hint="내용을 입력하세요."
                    android:includeFontPadding="false"
                    android:textColor="@color/Theme_Text_Color"
                    android:textColorHint="@color/Theme_Less_Accent_Color"
                    android:textSize="14dp"></EditText>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>