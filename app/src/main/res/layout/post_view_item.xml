<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/none_effect_background_img"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="420dp">
    <RelativeLayout
        android:id="@+id/Post_View_Content_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:layout_below="@id/Post_View_Title_Container"
            android:background="@color/Transparent_Black70"
            android:layout_width="match_parent"
            android:layout_height="420dp">
            <ImageView
                android:id="@+id/Post_View_Background"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </FrameLayout>
            <RelativeLayout
                android:id="@+id/Post_View_Title_Container"
                android:padding="2dp"
                android:background="@drawable/none_effect_background_img"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Post_View_User_Img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/default_profile_img"
                    app:civ_border_color="@color/Transparent_Green"
                    app:civ_border_width="1dp"></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/Post_View_User_Name"
                android:text="User_Name"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/Post_View_User_Img"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            </RelativeLayout>
        <TextView
            android:id="@+id/Post_View_Content"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:background="@color/Transparent_Black70"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/Posting_Favorite_Count_TV"
                android:text="000"
                android:textSize="10dp"
                android:textColor="@color/trans_80_light_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/Post_View_Favorite_Circle_CIV"
                android:layout_marginRight="5dp">
            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Post_View_Favorite_Circle_CIV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/trans_80_light_white"
                android:background="@drawable/ic_baseline_favorite_border_24">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/Post_Write_Date"
                android:text="Write_Date"
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/trans_60_light_white"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
