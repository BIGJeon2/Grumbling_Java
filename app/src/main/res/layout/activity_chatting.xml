<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class = "Chat_Binding">
        <variable
            name="Chat_Activity"
            type="com.bigjeon.grumbling.Chatting_Activity" />
    </data>
<LinearLayout
    tools:context="com.bigjeon.grumbling.Chatting_Activity"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="12"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/post_view_title_under_edge_1dp"
            android:id="@+id/Post_View_Content_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/BackPress_Btn"
                android:background="@drawable/ic_baseline_navigate_before_24"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:id="@+id/Chatting_Post_Content_TV"
                android:text="포스팅 내용"
                android:textSize="15dp"
                android:layout_toRightOf="@id/BackPress_Btn"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            </RelativeLayout>
    <RelativeLayout
        android:layout_weight="2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:padding="5dp"
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/Chatting_List_ListView"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:divider="@color/white"
            android:layout_above="@id/Replided_Edit_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/Replided_Edit_Container"
            android:visibility="gone"
            android:background="@color/Transparent_Black30"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:id="@+id/Replide_Target_Name_Container"
                android:background="@drawable/post_view_title_under_edge_1dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/Replied_Target_Name"
                    android:textSize="15dp"
                    android:hint="이름"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_below="@id/Replide_Target_Name_Container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Replied_Text"
                    android:textColor="@color/black"
                    android:text="답장 대상 내용"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/Transparent_light_Green"
        android:layout_weight="11.5"
        android:id="@+id/Chatting_Edittext_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Chatting_Send_CIV"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_send_24"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <ImageView
                android:id="@+id/Reply_Img"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_baseline_reply_24"
                android:rotationX="180"
                android:rotationY="180"></ImageView>
            <EditText
                android:id="@+id/Chatting_ETV"
                android:background="@drawable/round_shape"
                android:layout_toLeftOf="@id/Chatting_Send_CIV"
                android:hint="내용을 입력하세요."
                android:layout_toRightOf="@id/Reply_Img"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </EditText>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
</layout>