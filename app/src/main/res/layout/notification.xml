<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <ImageView
            android:background="@mipmap/main_app_icon_round"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>
        <TextView
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:text="그렁"
            android:fontFamily="@font/notosans_medium"
            android:includeFontPadding="false"
            android:textColor="@color/Notify_TitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/noti_icon"
                style="@style/Theme.AppCompat.Light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/main_app_icon_round"
                app:srcCompat="@drawable/user_profile_default_img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noti_title"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_medium"
                android:textSize="16dp"
                android:text="Title"
                android:textColor="@color/Notify_TitleColor"/>

            <TextView
                android:id="@+id/noti_message"
                android:paddingTop="2dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/Notify_TitleColor"
                android:text="Message"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>