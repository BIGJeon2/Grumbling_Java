<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    tools:context="com.bigjeon.grumbling.fragments.Set_Post_Background_Fragment">
    <RelativeLayout
        android:id="@+id/Dialog_Posting_Background_Container"
        android:layout_below="@id/Dialog_Posting_Set_Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_medium"
            android:includeFontPadding="false"
            android:text="배경 이미지 설정"
            android:paddingBottom="6dp"
            android:textColor="@color/Theme_Text_Color"
            android:textSize="16dp"></TextView>
        <Button
            android:id="@+id/Dialog_Posting_Background_Gallery"
            android:text="갤러리에서 사진 가져오기 ..."
            android:fontFamily="@font/notosans_medium"
            android:textSize="12dp"
            android:includeFontPadding="false"
            android:background="@drawable/transparent_round_shape"
            android:layout_marginTop="24dp"
            android:layout_below="@id/Dialog_Posting_Background_DB_Rcv"
            android:layout_centerInParent="true"
            android:textColor="@color/Theme_Text_Color"
            android:layout_width="match_parent"
            android:layout_height="36dp">
        </Button>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Dialog_Posting_Background_DB_Rcv"
            android:layout_centerInParent="true"
            tools:listitem="@layout/db_gif_img_item"
            android:layout_below="@id/TV1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="6dp">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</FrameLayout>
</layout>